<%= render 'layouts/info', user: @user %>

<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= attachment_image_tag @user, :profile_image, size: "60x60", format: 'jpeg', fallback: "no_image.jpg" %>
      </td>
      <td>
        <%= book.book_title %>
      </td>
      <td>
        <%= book.book_body %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>