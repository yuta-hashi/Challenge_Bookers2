<div>
  <%= render 'layouts/info', user: @user %>
  <%= render 'layouts/form', book: @book %>
</div>

<div>
  <h2>Users</h2>
  <table>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td>
          <%= attachment_image_tag @user, :profile_image, size: "60x60", format: 'jpeg', fallback: 'no_image.jpg' %>
        </td>

        <td>
          <%= user.username %>
        </td>

        <td>
          <%= link_to 'Show', user_path(user) %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>