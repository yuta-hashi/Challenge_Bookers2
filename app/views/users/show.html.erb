<%= render 'layouts/info', user: @user %>
<%= render 'layouts/form' %>

<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <th>
        <% link_to user_path(book.id) do %>
        <%= attachment_image_tag @user, :profile_image, size: "60x60", format: 'jpeg', fallback: 'no_image.jpg' %>
        <% end %>
      </th>
      <th>
        <%= book.book_title %>
      </th>
      <th>
        <%= book.book_body %>
      </th>
    </tr>
    <% end %>
    <%= paginate @books %>
  </tbody>
</table>